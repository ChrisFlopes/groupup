<div class="relative-wizard">
  <div class="wizard-card">
    <div class="wizard-card-header">
      <h2>Additional Info</h2>
    </div>
    <%= simple_form_for @meetup, wrapper_html: { class: 'width-100' }, url: wizard_path, method: :put do |f| %>
      <div class="wizard-card-item-no-padding">
        <%= f.input :additional_info, label: false, wrapper_html: { class: 'width-100' }, placeholder: "Leave some info for your friends..." %>
        <%= f.submit 'Continue', class: "btn-sec-s" %>
      </div>
    <% end %>
    <%= link_to previous_wizard_path do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
  </div>
</div>
