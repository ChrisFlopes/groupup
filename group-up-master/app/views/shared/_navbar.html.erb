<div class = "nav-groupup">
  <% if user_signed_in? %>
    <div class="nav-left hidden-xs hidden-sm">
      <%= link_to "Your Groups", groups_path, class: "nav-item nav-link" %>
      <%= link_to "Your Meetups", meetups_path, class: "nav-item nav-link" %>
    </div>

    <div class="logo">
      <%= link_to root_path do %>
      <%= image_tag "GroupUpIcon.png", height: 50 %>
      <% end %>
    </div>

  <div class="nav-right">
    <div class="dropdown">
      <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle", id: "nav-menu", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right nav-dropdown-menu">
        <li>
          <%= link_to user_path(current_user) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <% else %>

  <div class="logo">
    <%= link_to root_path do %>
    <%= image_tag "GroupUpIcon.png", height: 50 %>
    <% end %>
  </div>

  <div class="nav-left">
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "nav-item nav-link" %>
  </div>

  <% end %>
</div>

