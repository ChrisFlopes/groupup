<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-5 col-md-offset-1">
      <div class="profile-details">
        <div class="profile-pic">
          <%= image_tag "#{@user.photo}", class: "avatar-profile" %>
        </div>
        <div class="profile-info">
          <h2><%= @user.first_name %> <%= @user.last_name %></h2>
          <p><%= @user.email %></p>
        </div>
        <div class="profile-links">
          <%= link_to "Delete", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete #{@user.first_name} #{@user.last_name}?" }, class: "btn btn-flat" %>
        </div>
      </div>
    </div>
  </div>
</div>
